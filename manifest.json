{
  "manifest_version": 3,
  "name": "Game Zone - Beat Boredom",
  "version": "1.0",
  "description": "Fun games to play when you're bored!",
  "action": {
    "default_popup": "settings.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "system.display"]
}